<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/fab_padding"
    android:weightSum="10"
    tools:context=".reto.view.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="6">

        <EditText
            android:id="@+id/usuarioNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/texto_hint_nombre_usuario"
            android:inputType="textPersonName"
            android:layout_marginBottom="@dimen/half_fab_margin"/>

        <EditText
            android:id="@+id/usuarioEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/texto_hint_email_usuario"
            android:layout_marginBottom="@dimen/half_fab_margin"/>

        <EditText
            android:id="@+id/usuarioTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/texto_hint_telefono_usuario"
            android:layout_marginBottom="@dimen/half_fab_margin"/>

        <Button
            android:id="@+id/botonRegistroUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto_boton_registro_usuario"/>

    </LinearLayout>
        
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <LinearLayout
            android:id="@+id/linearListaUsuarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal" />

    </ScrollView>

</LinearLayout>