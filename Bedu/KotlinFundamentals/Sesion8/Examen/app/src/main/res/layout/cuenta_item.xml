<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cuentaItem"
    android:layout_marginBottom="@dimen/half_fab_margin"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="@dimen/imagen_cuenta_size"
            android:layout_height="@dimen/imagen_cuenta_size"
            android:src="@drawable/ic_attach_money_black_24dp"
            android:layout_marginBottom="@dimen/half_fab_margin"
            android:contentDescription="@string/texto_descripcion_imagen_dinero" />

        <TextView
            android:id="@+id/cuentaNumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/estiloInfoUsuario"
            tools:text="@string/placeholder_cuenta_numero"/>

        <TextView
            android:id="@+id/cuentaSaldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/estiloInfoUsuario"
            tools:text="@string/placeholder_cuenta_saldo"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>