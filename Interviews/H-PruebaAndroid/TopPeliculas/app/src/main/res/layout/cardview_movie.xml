<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/cardview_movie_width"
    android:layout_height="@dimen/cardview_movie_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardviewMovie"
    app:cardCornerRadius="@dimen/cardview_movie_radius"
    android:layout_margin="@dimen/cardview_movie_margin"
    android:layout_gravity="center_horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cardviewMovieImage"
            tools:background="@drawable/test"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/cardview_movie_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:paddingStart="@dimen/cardview_movie_layout_padding_left"
            android:paddingEnd="@dimen/cardview_movie_layout_padding_left"
            android:paddingBottom="@dimen/cardview_movie_layout_padding_left"
            android:background="@color/cardview_backgroundtext">

            <TextView
                android:id="@+id/cardviewMovieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/cardview_movie_title"
                android:textColor="@android:color/white"
                android:textSize="@dimen/cardview_movie_title_size"
                android:layout_marginBottom="@dimen/cardview_movie_margin" />

            <TextView
                android:id="@+id/cardviewMovieRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/cardview_movie_rate"
                android:textColor="@android:color/white"
                android:textSize="@dimen/cardview_movie_rate_size" />

        </LinearLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>