<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.UserDetailActivity"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/userDetailImage"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="300dp"
        tools:src="@drawable/ic_face_black_24dp"
        android:contentDescription="@string/content_description_item_user_image"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/userDetailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/dummy_user_id"
        style="@style/userDetailTextStyle"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/userDetailEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/dummy_user_email"
        style="@style/userDetailTextStyle"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/userDetailFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/dummy_user_first_name"
        style="@style/userDetailTextStyle"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/userDetailLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/dummy_user_last_name"
        style="@style/userDetailTextStyle"
        android:layout_marginBottom="8dp"/>

</LinearLayout>