<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:id="@+id/cardViewUser"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="0dp"
    app:cardCornerRadius="20dp"
    android:layout_gravity="center_horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/itemUserImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/ic_face_black_24dp"
            android:contentDescription="@string/content_description_item_user_image" />

        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#53292910"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/itemUserFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/dummy_user_first_name"
                style="@style/cardViewUserTextStyle"/>

        </LinearLayout>



    </FrameLayout>

</androidx.cardview.widget.CardView>