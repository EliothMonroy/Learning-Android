        android:id="@+id/itemGeoLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="-37.3159"/>

    <TextView
        android:id="@+id/itemGeoLon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="81.1496"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/company"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/itemCompanyName"
        android:layout_width="wrap_content"
